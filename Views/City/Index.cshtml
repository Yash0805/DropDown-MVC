@{
}
@{
    ViewData["Title"] = "List of Cities";
}
@model IReadOnlyList<CityViewModel>
<div>
    <h1 style="color:brown">List of States</h1>
    <Table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th style="padding: 8px; color:darkslategray">City Name</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var name in Model)
            {
                <tr>
                    <td style="padding: 8px; color:slateblue"><b>@name.CityName</b></td>
                </tr>
            }
        </tbody>
    </Table>
</div>