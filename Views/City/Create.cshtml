@model CityViewModel

<form asp-controller="City" asp-action="Create" method="post">
     <div class="row mb-3">
        @Html.LabelFor(m => m.CityName, new { @class = "col-sm-2 col-form-label" })
        <div class="col-sm-10">
            @Html.TextBoxFor(m => m.CityName, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.CityName, null, new { @class = "text-danger" })
        </div>
    </div>
  
    <div class="mb-3 row">
        @Html.LabelFor(m => m.StateID, new { @class = "col-sm-2 col-form-label" })
        <div class="col-sm-10">
            @Html.DropDownListFor(
            m => m.StateID,
                        new SelectList(Model.States, "StateID", "StateName"),
                        "Select State",
                        new { @class = "form-control" }
                        )
            @Html.ValidationMessageFor(m => m.StateID, null, new { @class = "text-danger" })
        </div>
    </div>

    @* <div>
        @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
    </div> *@
    <div>
        <button type="submit" class="btn-primary btn">Save</button>
    </div>
</form>

