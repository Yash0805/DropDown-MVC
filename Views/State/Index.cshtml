@{
    ViewData["Title"] = "List of States";
}

@model IReadOnlyList<StateViewModel>

<div>
    <h1 style="color:brown">List of States</h1>

    @if (Model == null || !Model.Any())
    {
        <p class="text-muted">No states found.</p>
    }
    else
    {
        <table class="table table-striped table-bordered">
            <thead>
            <tr>
                <th style="padding: 8px; color:darkslategray">State Name</th>
                <th style="padding: 8px; color:darkslategray">State Code</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var state in Model)
            {
                <tr>
                    <td style="padding: 8px; color:slateblue">
                        <b>@state.StateName</b>
                    </td>
                    <td style="padding: 8px; color:slateblue">
                        <b>@state.Code</b>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    }
</div>